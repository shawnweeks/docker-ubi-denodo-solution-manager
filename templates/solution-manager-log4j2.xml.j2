<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>

        <RollingFile name="FILEOUT" filePattern="{{ HOME }}/logs/solution-manager/solution-manager-%d{yyyy-MM-dd}.log">
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </RollingFile>

    </Appenders>

    <Loggers>

        <Root level="{{ DENODO_SOLMAN_LOG_LEVEL | default('ERROR') }}">
            <AppenderRef ref="FILEOUT" />
        </Root>
        <logger name="com.denodo.solutionmanager" level="{{ DENODO_SOLMAN_LOG_LEVEL | default('ERROR') }}" />
        <logger name="org.springframework" level="{{ DENODO_SOLMAN_LOG_LEVEL | default('ERROR') }}" />
    </Loggers>

</Configuration>