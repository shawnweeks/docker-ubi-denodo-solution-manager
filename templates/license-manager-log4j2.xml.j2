<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>

        <RollingFile name="FILEOUT" filePattern="{{ HOME }}/logs/license-manager/license-manager-%d{yyyy-MM-dd}.log">
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </RollingFile>

    </Appenders>

    <Loggers>

        <logger name="com.denodo.licensemanager" level="ERROR" />
        <logger name="com.denodo.solutionmanager" level="ERROR" />
        <logger name="org.springframework" level="ERROR" />

        <root level="error">
            <appender-ref ref="FILEOUT" />
        </root>

    </Loggers>

</Configuration>
