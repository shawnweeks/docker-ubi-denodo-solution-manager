<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c{1}.%M:%L %x - %m %n" />
        </Console>

        <RollingFile name="FILEOUT" filePattern="{{ HOME }}/logs/solution-manager-web-tool/solution-manager-web-tool-%d{yyyy-MM-dd}.log">
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </RollingFile>
    </Appenders>

    <Loggers>

        <Logger name="com.denodo" level="ERROR" />
        <Logger name="org.thymeleaf" level="ERROR" />
        <Logger name="org.springframework" level="ERROR" />
        <Logger name="org.apache" level="ERROR" />

        <Root level="ERROR">
            <AppenderRef ref="FILEOUT" />
            <AppenderRef ref="STDOUT" />
        </Root>

    </Loggers>

</Configuration>